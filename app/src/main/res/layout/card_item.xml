<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/prisoner"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:focusable="true"
    layout_height="200"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prisoner_img"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fio_txt"
            android:layout_width="261dp"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/prisoner_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/age_txt"
            android:layout_width="261dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/prisoner_img"
            app:layout_constraintTop_toBottomOf="@+id/fio_txt" />

        <TextView
            android:id="@+id/height_txt"
            android:layout_width="261dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/prisoner_img"
            app:layout_constraintTop_toBottomOf="@+id/age_txt" />

        <TextView
            android:id="@+id/weight_txt"
            android:layout_width="261dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/prisoner_img"
            app:layout_constraintTop_toBottomOf="@+id/height_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
